@{
    Layout = "~/Views/Shared/_Error.cshtml";

    var Url_ = ViewBag.Url_ ?? "";
}

<br>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="panels">
                <div class="span12">
                    <div class="panel animated flipInY">
                        <div class="panel-heading text-center text-bold">Lo Sentimos...</div>
                        <div class="panel-body">
							<form novalidate action="" method="post">
								<div class="container-fluid no-padding">
									<div class="row-fluid">
										<div class="text-center">
											<img class="logo" alt="" src="@Url.Content("~/Public/img/logo.png")" />
										</div>
									</div>
									<div class="row-fluid">
										<div class="span12">
											<div class="alert alert-danger">
												<strong>¡Atención!</strong>
												<br />
												Ha ocurrido un Error, la información que recopilamos es la siguiente:
											</div>
										</div>
									</div>
									<div class="row-fluid">
										<div class="span12">
											<label>Url</label>
											<span class="uneditable-input input-block-level">@Url_</span>
										</div>
									</div>
									<div class="row-fluid">
										<div class="span12">
											<label>Mensaje</label>
											<span class="uneditable-input input-block-level">La página que busca no existe.</span>
										</div>
									</div>
									<span class="text-danger">
										* Por favor contáctese con su <strong>Administrador</strong>.
									</span>
								</div>
							</form>

                        </div>
                        <div class="panel-footer text-center">
                            <a href="@Url.Action("Index", "Home", new { Area = "Administration" })" class="btn btn-primary">
                                <i class="icon-home pr4"></i>Volver al Inicio
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .logo {
        max-width: 280px !important;
    }

    .panels {
        margin: 0 auto;
        max-width: 640px;
    }

        .panels .panel {
            max-width: 320px;
            margin: 0 auto;
        }
</style>
