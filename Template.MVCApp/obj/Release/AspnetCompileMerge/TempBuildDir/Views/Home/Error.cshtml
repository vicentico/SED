@{
    Layout = "~/Views/Shared/_Error.cshtml";

    var Excepcion = Session["ErrorException"] as ExcepcionWeb;
}

<br>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <div class="panels">
                <div class="span12">
                    <div class="panel animated flipInY">
                        <div class="panel-heading text-center text-bold">Lo Sentimos...</div>
                        <div class="panel-body">
							<form novalidate action="" method="post">
								<div class="container-fluid no-padding">
									<div class="row-fluid">
										<div class="text-center">
											<img class="logo" alt="" src="@Url.Content("~/Public/img/logo.png")" />
										</div>
									</div>
									@if (Excepcion != null)
									{
										<div class="row-fluid">
											<div class="span12">
												<div class="alert alert-danger">
													<strong>¡Atención!</strong>
													<br />
													Ha ocurrido un Error, la información que recopilamos es la siguiente:
												</div>
											</div>
										</div>
										if (Excepcion.Codigo == 404)
										{
											<div class="row-fluid">
												<div class="span12">
													<label>Url</label>
													<span class="uneditable-input input-block-level">@Excepcion.Url</span>
												</div>
											</div>
											<div class="row-fluid">
												<div class="span12">
													<label>Mensaje</label>
													<span class="uneditable-input input-block-level">La página que busca no existe.</span>
												</div>
											</div>
										}
										else
										{
											<div class="row-fluid">
												<div class="span12">
													<label>Url</label>
													<span class="uneditable-input input-block-level">@Excepcion.Url</span>
												</div>
											</div>
											<div class="row-fluid">
												<div class="span12">
													<label>Mensaje</label>
													<textarea class="uneditable-textarea input-block-level" readonly rows="10">@Excepcion.Mensaje</textarea>
												</div>
											</div>
										}
									}
									else
									{
										<div class="row-fluid">
											<div class="span12">
												<div class="alert alert-danger">
													<strong>¡Atención!</strong>
													<br />
													Ha ocurrido un Error.
												</div>
											</div>
										</div>
									}
									<span class="text-danger">
										* Por favor contáctese con su <strong>Administrador</strong>.
									</span>
								</div>
							</form>

                        </div>
                        <div class="panel-footer text-center">
                            <a href="@Url.Action("Index", "Home", new { Area = "Administration" })" class="btn btn-primary">
                                <i class="icon-home pr4"></i>Volver al Inicio
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .logo {
        max-width: 280px !important;
    }

    .panels {
        margin: 0 auto;
        max-width: 640px;
    }

        .panels .panel {
            max-width: 320px;
            margin: 0 auto;
        }
</style>
