@model List<Menu>
@{
    ViewBag.titulo = "Administración";
    Layout = "~/Views/Shared/_Main.cshtml";
}

@if (Model.Count > 0)
{
    var EstiloMenu = "";
    var Contador = 0;

    foreach (var Menu_ in Model)
    {
        var EstiloActual = Utility.GetRandomColorStyle();

        while (EstiloMenu == EstiloActual)
        {
            EstiloActual = Utility.GetRandomColorStyle();
        }
            
        if (Contador == 0)
        {
            @Html.Raw("<div class=\"row-fluid\">")
        }
        else if (Contador > 0 && Contador %  4 == 0)
        {
            @Html.Raw("</div><div class=\"row-fluid\">")
        }

        <div class="span3 text-center">
            <div class="bg-@EstiloActual-light p12 br4">
                <i class="@Menu_.Icono text-center text-white fs48 mb8"></i>
                <a href="@Menu_.Url" class="btn btn-block btn-@EstiloActual mt8" title="@Menu_.Ayuda">@Menu_.Texto</a>
            </div>
        </div>

        EstiloMenu = EstiloActual;
        Contador++;
    }
        
    @Html.Raw("</div>")
}
