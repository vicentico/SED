@model Usuario

@{
    Layout = null;
    
    if (Model == null)
    {
        <script>
            $(modal).modal("hide");
        </script>
        
        return;
    }
}

<div class="modal-header">
    <h4><i class="icon-key mr8 text-danger"></i>Contraseña de Usuario</h4>
    <hr />
</div>
<div class="modal-body">
    <div class="row-fluid">
        <div class="span12">
            <label>Contraseña</label>
            <span class="uneditable-input input-block-level">@Coder.Decode(Model.Password)</span>
        </div>
    </div>
</div>
<div class="modal-footer text-center">
    <hr />
    <a href="javascript:void(0);" class="btn btn-primary" data-dismiss="modal">
        <i class="icon-ok"></i>Aceptar
    </a>
</div>
